{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/(.*)", "status": 308, "headers": { "Location": "https://albus1.com/$1" }, "has": [{ "type": "host", "value": "www.albus1.com" }] },
    { "src": "/api/.*", "dest": "/api/index.js" },
    { "src": "/api/waitlist", "dest": "/api/waitlist.js" },
    { "src": "/api/waitlist/export.csv", "dest": "/api/waitlist/export.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}



{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "frontend/dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1" },
    { "src": "/assets/(.*)", "dest": "frontend/dist/assets/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}


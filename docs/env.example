# Environment variables for local API and frontend
# Copy to .env (root) and export as needed

# Admin and features
ADMIN_KEY=
REQUIRE_VERIFICATION=false
ALLOW_INVITES=true
AUTO_ACTIVATE=false
EMAIL_ENABLED=false

# Email provider (if EMAIL_ENABLED=true)
RESEND_API_KEY=
EMAIL_FROM=team@yourdomain.com

# Tokens and TTLs
VERIFY_TOKEN_TTL_HOURS=72
INVITE_TOKEN_TTL_DAYS=14

# Supabase (optional; if unset, mock store is used locally)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE=

# Local API server
PORT=3000
CORS_ORIGIN=http://localhost:5173

# Production CORS (preferred)
FRONTEND_ORIGIN=https://your-frontend-domain.com

# CAPTCHA (optional)
REQUIRE_CAPTCHA=false
TURNSTILE_SECRET_KEY=

# Frontend (set only if API is on a different origin)
VITE_API_BASE=

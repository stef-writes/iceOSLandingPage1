# Minimal environment for /api/waitlist on Vercel
# Copy these into Project → Settings → Environment Variables (Production & Preview)
# Do NOT commit real secrets.

# Required (serverless functions)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
# Either variable name will be read by the API
SUPABASE_SERVICE_ROLE_KEY=YOUR_SERVICE_ROLE_KEY
# SUPABASE_SERVICE_ROLE=YOUR_SERVICE_ROLE_KEY

# Frontend (Vite)
VITE_API_BASE=/api

# Admin (protect list, invites)
ADMIN_KEY=some-strong-random
CORS_ORIGIN=http://localhost:5173

# Feature flags
REQUIRE_VERIFICATION=false
ALLOW_INVITES=true
AUTO_ACTIVATE=false

# Token TTLs
VERIFY_TOKEN_TTL_HOURS=72
INVITE_TOKEN_TTL_DAYS=14

# Email (optional)
EMAIL_ENABLED=false
RESEND_API_KEY=
EMAIL_FROM=Team <team@yourdomain.com>
